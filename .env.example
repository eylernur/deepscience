# AI Provider Configuration - Available options: openai, azure
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Azure OpenAI Configuration (required if AI_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com
AZURE_OPENAI_MODEL_DEPLOYMENT=your_model_deployment_name
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Application URL - Change this in production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenAlex API URL - Default is the public endpoint
OPENALEX_API_URL=https://api.openalex.org

# Optional: Set NODE_ENV for production
NODE_ENV=production

# Optional: Set custom port (default: 3000)
PORT=3000 